<?xml version="1.0"?>

<!DOCTYPE suppressions PUBLIC
    "-//Puppy Crawl//DTD Suppressions 1.0//EN"
    "http://www.puppycrawl.com/dtds/suppressions_1_0.dtd">

<suppressions>
  <!-- Allow use of AbstractButton as reference type in these files. -->
  <suppress checks="IllegalType" files="ConsoleUI.java|CustomAction.java"/>

  <!-- Has a public 'grinder' field. -->
  <suppress checks="StaticVariableName|VisibilityModifier"
            files="net.grinder.script.Grinder.java"/>

  <!-- Non standard method names. -->
  <suppress checks="MethodName" files="HTTPRequest.java"/>
  <suppress checks="MethodName" files="InstrumentedPyInstance.java"/>
  <suppress checks="MethodName" files="InstrumentedPyJavaInstance.java"/>
  <suppress checks="MethodName" files="InstrumentedPyJavaInstanceForJavaInstances.java"/>
  <suppress checks="MethodName" files="InstrumentedPyReflectedFunction.java"/>
</suppressions>
