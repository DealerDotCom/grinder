<?xml version="1.0" encoding="UTF-8"?>

<assembly>
  <id>binary</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>true</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <includes>
        <include>AUTHORS</include>
        <include>CHANGES</include>
        <include>LICENSE*</include>
        <include>README</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>examples</directory>
      <includes>
        <include>**</include>
      </includes>
      <excludes>
        <exclude>**/log/**</exclude>
        <exclude>**/*.class</exclude>
        <exclude>**/cachedir</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <directory>etc</directory>
      <includes>
        <include>*.xsl</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>contrib</directory>
    </fileSet>
  </fileSets>
  <dependencySets>
    <dependencySet>
      <outputDirectory>/lib</outputDirectory>
      <unpack>false</unpack>
      <scope>runtime</scope>
      <outputFileNameMapping>${artifact.artifactId}.${artifact.extension}
      </outputFileNameMapping>
      <includes>
        <include>net.grinder:grinder</include>
        <include>net.grinder:grinder-agent</include>
      </includes>
    </dependencySet>
    <dependencySet>
      <outputDirectory>/lib</outputDirectory>
      <unpack>false</unpack>
      <scope>runtime</scope>
      <includes>
        <include>asm:asm</include>
        <include>org.picocontainer:picocontainer</include>
        <include>org.python:jython</include>
        <include>javax.xml:jsr173</include>
        <include>xmlbeans:xbean</include>
      </includes>
    </dependencySet>
  </dependencySets>
</assembly>
