      <entry name="Download" sourceFile="download-xhtml.xml" 
	     targetFile="download.html" type="xhtml"/>
      <entry name="Support" sourceFile="support-xhtml.xml" 
	     targetFile="support.html" type="xhtml"/>
      <entry name="The Book" sourceFile="book-xhtml.xml" 
	     targetFile="book.html" type="xhtml"/>
    </section>
    <section name="User Manual" sourceDir="manual" targetDir="manual"
             type="section">
      <entry name="Manual" sourceFile="manual-xhtml.xml" 
