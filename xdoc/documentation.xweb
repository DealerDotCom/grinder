    <section name="The Grinder 3" sourceDir="g3" targetDir="g3"
             type="section">
      <entry name="Welcome" sourceFile="welcome-xhtml.xml" 
             targetFile="index.html" type="g3-xhtml-1"/>
      <entry name="Getting Started" sourceFile="getting-started-xhtml.xml" 
             targetFile="getting-started.html" type="g3-xhtml-1"/>
