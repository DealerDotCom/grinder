    <section name="Development" sourceDir="development" targetDir="development"
             type="section">
      <entry name="Building" sourceFile="development-xhtml.xml" 
             targetFile="index.html" type="xhtml-1"/>
    </section>

    <directory sourceDir="images" targetDir="images" type="copy">
      <file sourceFile="grinder.gif" targetFile="grinder.gif"
            type="copy" id="logo"/>
      <file sourceFile="grinder3.jpg" targetFile="grinder3.jpg" type="copy"/>
      <file sourceFile="PythonPoweredSmall.gif"
            targetFile="PythonPoweredSmall.gif" type="copy"/>
      <file sourceFile="book-cover.jpg" targetFile="book-cover.jpg"
            type="copy"/>
      <file sourceFile="console-screenshot.png"
            targetFile="console-screenshot.png" type="copy"/>
      <file sourceFile="console-es.png" targetFile="console-es.png"
            type="copy"/>
      <file sourceFile="script-logo.png" targetFile="script-logo.png"
            type="copy"/>
    </directory>

  </structure>

  <layout>
    <sectionStyle type="section">
      <image type="normalSection"/>
      <image type="activeSection"/>
      <image type="banner"/>
    </sectionStyle>

    <sectionStyle type="copy">
      <copy/>
    </sectionStyle>

    <documentStyle type="xhtml">
      <xsl stylesheet="stylesheets/grinder.xsl">
        <xsl stylesheet="stylesheets/relative-urls.xsl">
          <parameter name="base" value="."/>
          <xsl stylesheet="stylesheets/identity.xsl" navigationElement="html"/>
        </xsl>
      </xsl>
      <imageGroup name="pageButtons"/>
    </documentStyle>

    <documentStyle type="xhtml-1">
      <xsl stylesheet="stylesheets/grinder.xsl">
        <xsl stylesheet="stylesheets/relative-urls.xsl">
          <parameter name="base" value=".."/>
          <xsl stylesheet="stylesheets/identity.xsl" navigationElement="html"/>
        </xsl>
      </xsl>
      <imageGroup name="pageButtons"/>
    </documentStyle>

    <documentStyle type="g3-xhtml-1">
      <xsl stylesheet="stylesheets/grinder.xsl">
        <xsl stylesheet="stylesheets/relative-urls.xsl">
          <parameter name="base" value=".."/>
          <xsl stylesheet="stylesheets/add-g3-decoration.xsl"
               navigationElement="html"/>
        </xsl>
      </xsl>
      <imageGroup name="pageButtons"/>
    </documentStyle>

    <documentStyle type="xhtml-toc-1">
      <xsl stylesheet="stylesheets/grinder.xsl">
        <xsl stylesheet="stylesheets/relative-urls.xsl">
          <parameter name="base" value=".."/>
          <xsl stylesheet="stylesheets/add-toc.xsl" navigationElement="html"/>
        </xsl>
      </xsl>
      <imageGroup name="pageButtons"/>
    </documentStyle>

    <documentStyle type="g3-xhtml-toc-1">
      <xsl stylesheet="stylesheets/grinder.xsl">
        <xsl stylesheet="stylesheets/relative-urls.xsl">
          <parameter name="base" value=".."/>
          <xsl stylesheet="stylesheets/add-g3-decoration.xsl">
            <xsl stylesheet="stylesheets/add-toc.xsl"
                 navigationElement="html"/>
          </xsl>
        </xsl>
      </xsl>
      <imageGroup name="pageButtons"/>
    </documentStyle>

    <documentStyle type="copy">
      <copy/>
    </documentStyle>

    <imageStyle width="460" height="50" render="title"
                fileNamePattern="banner_%n.png" type="banner">
      <svg xwebid="xweb">
	<filter id="dropShadow" filterUnits="userSpaceOnUse" x="-10" y="-10"
                width="650" height="100">
	  <feFlood result="grey" flood-color="rgb(80,80,80)" flood-opacity="1"/>
	  <feOffset in="SourceAlpha" result="offset" dx="2" dy="1"/>
	  <feComposite operator="in" in="grey" in2="offset" result="shadow"/>
	  <feComposite in="SourceGraphic" in2="shadow" operator="over"/>
	</filter>
	<rect fill="rgb(255,255,255)" x="0" y="0" width="460" height="50"/>
	<rect fill="rgb(0,0,80)" x="1" y="1" width="458" height="48"/>
	<rect fill="rgb(255,255,255)" x="5" y="5" width="450" height="40"/>
	<text font-family="Arial" font-weight="bold" font-size="32" fill-opacity="1" fill="rgb(236,158,0)" stroke-opacity="1" stroke-width="3" color="rgb(236,158,0)" text-anchor="middle" x="230" y="35" filter="url(#dropShadow)" id="xweb">oopsala</text>
      </svg>
    </imageStyle>

    <imageStyle width="100" height="30" fileNamePattern="button_%n.png"
                type="normalSection">
      <svg xwebid="xweb">
        <rect fill="rgb(0,0,128)" x="1" y="2" width="98" height="28"/>
        <text font-family="Arial" font-size="13" fill-opacity="1"
              font-weight="bold" fill="rgb(255,255,255)" x="50" y="20"
              text-anchor="middle" id="xweb">oopsala</text>
      </svg>
    </imageStyle>

    <imageStyle width="100" height="30" fileNamePattern="button_%n_act.png"
                type="activeSection">
      <svg xwebid="xweb">
        <rect fill="rgb(236,158,0)" x="1" y="2" width="98" height="28"/>
        <text font-family="Arial" font-size="13" fill-opacity="1"
              font-weight="bold" fill="rgb(255,255,255)" x="50" y="20"
              text-anchor="middle" id="xweb">oopsala</text>
      </svg>
    </imageStyle>

    <imageGroup name="pageButtons">
      <image type="normal"/>
      <image type="active"/>
    </imageGroup>

    <imageStyle width="100" height="20" fileNamePattern="button_%n.png"
                type="normal">
      <svg xwebid="xweb">
        <path fill-opacity="1" fill="rgb(236,158,0)" opacity="1"
              d="M47 0 L47 3 L50 7 L53 3 L53 0"/>
        <text font-family="Arial" font-size="13" fill-opacity="1"
              fill="rgb(80,80,80)" x="50" y="18" text-anchor="middle"
              id="xweb">oopsala</text>
      </svg>
    </imageStyle>

    <imageStyle width="100" height="20" fileNamePattern="button_%n_act.png"
                type="active">
      <svg xwebid="xweb">
      <path fill-opacity="1" fill="rgb(236,158,0)" opacity="1"
	    d="M47 0 L47 3 L50 7 L53 3 L53 0"/>
      <text font-family="Arial" font-size="13" fill-opacity="1"
	    fill="rgb(236,158,0)" x="50" y="18" text-anchor="middle"
	    id="xweb">oopsala</text>
      </svg>
    </imageStyle>
  </layout>
</website>

