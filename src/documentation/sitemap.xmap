<?xml version="1.0"?>

<map:sitemap xmlns:map="http://apache.org/cocoon/sitemap/1.0">
  <map:components>
    <map:generators default="file">
      <map:generator name="dir"
	src="org.apache.cocoon.generation.DirectoryGenerator"/>
    </map:generators>
  </map:components>

  <map:resources/>

  <map:pipelines>

    <map:pipeline>
      <map:match pattern="todo.xml">
	<map:generate type="file" src="{project:temp-dir}/todo.xml"/>
        <map:transform src="todo2doc.xsl"/>

        <map:serialize type="xml"/>
      </map:match>
    </map:pipeline>
<!--
    <map:pipeline>
      <map:match pattern="**.dir">
	<map:generate src="cocoon:/index.xml"/>
        <map:serialize type="xml"/>
      </map:match>
    </map:pipeline>
-->
  </map:pipelines>


</map:sitemap>
